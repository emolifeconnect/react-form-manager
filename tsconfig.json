{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "declaration": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "esModuleInterop": true,
        "outDir": "dist",
        "moduleResolution": "node"
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
